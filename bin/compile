#!/usr/bin/env bash

set -eo pipefail
BUILD_DIR=${1:-}
cd $BUILD_DIR
mkdir -p vendor/yt
cd vendor/yt
curl --location https://github.com/yt-dlp/yt-dlp/releases/download/2024.08.06/yt-dlp -o yt-dlp
echo '2f77f6a200733fec8367031a52a75b2b02973ea25322d1488a4bfd059bc69c49  yt-dlp' > yt-dlp.sha
sha256sum --check yt-dlp.sha
chmod a+rx yt-dlp
./yt-dlp --version
PROFILE_PATH="$BUILD_DIR/.profile.d/yt-dlp.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:/app/vendor/yt"' >> $PROFILE_PATH

echo "-----> Installing yt-dlp-youtube-oauth2 plugin"
curl -L https://github.com/coletdjnz/yt-dlp-youtube-oauth2/archive/main.zip -o yt-dlp-youtube-oauth2.zip
unzip yt-dlp-youtube-oauth2.zip
mv yt-dlp-youtube-oauth2-main/yt_dlp_plugins $BUILD_DIR/
rm -rf yt-dlp-youtube-oauth2.zip yt-dlp-youtube-oauth2-main
